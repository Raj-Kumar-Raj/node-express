<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>ALL CHATS!</h3>
    <form method="GET" action="/chats/new">
        <button>New chats</button>
        <br> 
    </form >  
   <% for(let chat of chats){ %>
        <div class="chat">
            <P>From:<i><%= chat.from %></i></P>
            <div class="msg">
                <P><%= chat.msg %></P>
                <form method="GET" action="/chats/<%=chat._id %>/edit">
                    <button>edit</button>
                    
                </form>
                <br>
                <form method="POST" action="/chats/<%=chat._id %>?_method=DELETE">
                    <button>delete</button>
                </form>
            </div>
            <P>Recevied by  <i><%= chat.to %></i></P>
            <hr/>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <%= chat.created_at.toString().split(" ").slice(0,4).join("-") %></p>
        </div>
        <br><br>
   <% } %>
</body>
</html>